@{
    ViewData["Title"] = "Add Movies";
}

@model mission4.Models.Application
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

@*Movie input form*@
<div class="container">
    <h2>Enter Movie Info:</h2>
    <form method="post">

        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input class="form-control" placeholder="Title" asp-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <select class="form-control" asp-for="CategoryID">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                 {
                    <option value="@c.CategoryID">@c.CategoryName</option>
                }
            </select> 
        </div>
        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input class="form-control" placeholder="Year" asp-for="Year" />
        </div>
        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input class="form-control" placeholder="Director" asp-for="Director" />
        </div>
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <input class="form-control" placeholder="Rating" asp-for="Rating" />
        </div>
        <div class="form-group">
            <label asp-for="Edited">Is edited?</label>
            <input type="checkbox" asp-for="Edited" />
        </div>
        <div class="form-group">
            <label asp-for="Lent">Lent to:</label>
            <input class="form-control" placeholder="Lent to" asp-for="Lent" />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input class="form-control" placeholder="Notes" asp-for="Notes" />
            <br />
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Submit</button>
        </div>

        <div asp-validation-summary="All"></div>

    </form>
</div>

